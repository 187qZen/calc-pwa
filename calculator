    <script>
        // –©—ñ–ª—å–Ω–æ—Å—Ç—ñ –º–∞—Ç–µ—Ä—ñ–∞–ª—ñ–≤
        const densities = {
            st3: 7850,
            st20: 7850,
            aisi304: 8000,
            aisi316: 8000
        };
        
        let calculationType = 'lengthToWeight';
        
        // –ü–µ—Ä–µ–º–∏–∫–∞–Ω–Ω—è —Ç–∏–ø—É —Ä–æ–∑—Ä–∞—Ö—É–Ω–∫—É
        document.querySelectorAll('.calc-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.calc-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                calculationType = this.dataset.type;
                
                if (calculationType === 'lengthToWeight') {
                    document.getElementById('lengthInput').classList.remove('hidden');
                    document.getElementById('weightInput').classList.add('hidden');
                    document.getElementById('length').required = true;
                    document.getElementById('weight').required = false;
                } else {
                    document.getElementById('lengthInput').classList.add('hidden');
                    document.getElementById('weightInput').classList.remove('hidden');
                    document.getElementById('length').required = false;
                    document.getElementById('weight').required = true;
                }
            });
        });
        
        // –ü–µ—Ä–µ–º–∏–∫–∞–Ω–Ω—è –ø–∞—Ä–∞–º–µ—Ç—Ä—ñ–≤ —Ç—Ä—É–±–∏
        document.getElementById('productType').addEventListener('change', function() {
            const roundParams = document.getElementById('roundParams');
            const profileParams = document.getElementById('profileParams');
            
            if (this.value === 'round') {
                roundParams.classList.remove('hidden');
                profileParams.classList.add('hidden');
                document.getElementById('diameter').required = true;
                document.getElementById('wallThickness').required = true;
                document.getElementById('width').required = false;
                document.getElementById('height').required = false;
                document.getElementById('profileWallThickness').required = false;
            } else if (this.value === 'profile') {
                roundParams.classList.add('hidden');
                profileParams.classList.remove('hidden');
                document.getElementById('diameter').required = false;
                document.getElementById('wallThickness').required = false;
                document.getElementById('width').required = true;
                document.getElementById('height').required = true;
                document.getElementById('profileWallThickness').required = true;
            }
        });
        
        // –†–æ–∑—Ä–∞—Ö—É–Ω–æ–∫
        document.getElementById('calculatorForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const productType = document.getElementById('productType').value;
            const material = document.getElementById('material').value;
            const density = densities[material];
            
            let result, details;
            
            if (productType === 'round') {
                const diameter = parseFloat(document.getElementById('diameter').value) / 1000; // –º
                const wallThickness = parseFloat(document.getElementById('wallThickness').value) / 1000; // –º
                
                if (calculationType === 'lengthToWeight') {
                    const length = parseFloat(document.getElementById('length').value);
                    // –í–∞–≥–∞ = œÄ √ó (D - t) √ó t √ó L √ó œÅ
                    const weight = Math.PI * (diameter - wallThickness) * wallThickness * length * density;
                    result = weight.toFixed(2);
                    details = `–¢—Ä—É–±–∞ –∫—Ä—É–≥–ª–∞ √ò${(diameter*1000).toFixed(1)}√ó${(wallThickness*1000).toFixed(1)} –º–º, –¥–æ–≤–∂–∏–Ω–∞ ${length} –º`;
                    document.getElementById('resultUnit').textContent = '–∫–≥';
                } else {
                    const weight = parseFloat(document.getElementById('weight').value);
                    // –î–æ–≤–∂–∏–Ω–∞ = W / (œÄ √ó (D - t) √ó t √ó œÅ)
                    const length = weight / (Math.PI * (diameter - wallThickness) * wallThickness * density);
                    result = length.toFixed(2);
                    details = `–¢—Ä—É–±–∞ –∫—Ä—É–≥–ª–∞ √ò${(diameter*1000).toFixed(1)}√ó${(wallThickness*1000).toFixed(1)} –º–º, –≤–∞–≥–∞ ${weight} –∫–≥`;
                    document.getElementById('resultUnit').textContent = '–º';
                }
            } else {
                const width = parseFloat(document.getElementById('width').value) / 1000; // –º
                const height = parseFloat(document.getElementById('height').value) / 1000; // –º
                const wallThickness = parseFloat(document.getElementById('profileWallThickness').value) / 1000; // –º
                
                // –ü–ª–æ—â–∞ –ø–µ—Ä–µ—Ä—ñ–∑—É –ø—Ä–æ—Ñ—ñ–ª—å–Ω–æ—ó —Ç—Ä—É–±–∏
                const area = 2 * wallThickness * (width + height - 2 * wallThickness);
                
                if (calculationType === 'lengthToWeight') {
                    const length = parseFloat(document.getElementById('length').value);
                    const weight = area * length * density;
                    result = weight.toFixed(2);
                    details = `–¢—Ä—É–±–∞ –ø—Ä–æ—Ñ—ñ–ª—å–Ω–∞ ${(width*1000).toFixed(1)}√ó${(height*1000).toFixed(1)}√ó${(wallThickness*1000).toFixed(1)} –º–º, –¥–æ–≤–∂–∏–Ω–∞ ${length} –º`;
                    document.getElementById('resultUnit').textContent = '–∫–≥';
                } else {
                    const weight = parseFloat(document.getElementById('weight').value);
                    const length = weight / (area * density);
                    result = length.toFixed(2);
                    details = `–¢—Ä—É–±–∞ –ø—Ä–æ—Ñ—ñ–ª—å–Ω–∞ ${(width*1000).toFixed(1)}√ó${(height*1000).toFixed(1)}√ó${(wallThickness*1000).toFixed(1)} –º–º, –≤–∞–≥–∞ ${weight} –∫–≥`;
                    document.getElementById('resultUnit').textContent = '–º';
                }
            }
            
            // –ü–æ–∫–∞–∑–∞—Ç–∏ —Ä–µ–∑—É–ª—å—Ç–∞—Ç
            document.getElementById('resultValue').textContent = result;
            document.getElementById('calcDetails').textContent = details;
            document.getElementById('result').classList.add('show');
        });
    </script>
</body>
